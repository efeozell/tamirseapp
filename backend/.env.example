# Production Environment Variables Template
# Copy this to .env.production and fill with actual values

# Server
NODE_ENV=production
PORT=8000

# Frontend URL (deployed frontend)
FRONTEND_URL=https://your-app.vercel.app

# Database (Railway/Render will provide this)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Railway/Render will provide this)
REDIS_URL=redis://default:password@host:port
REDIS_PASSWORD=your_redis_password

# JWT Secrets (Generate strong secrets!)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ACCESS_TOKEN_SECRET=your_access_token_secret_min_32_chars
REFRESH_TOKEN_SECRET=your_refresh_token_secret_min_32_chars

# API
API_BASE_URL=https://your-backend.railway.app/api
